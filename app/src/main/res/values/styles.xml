<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BasicButton" parent="android:Widget.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="BasicLabel" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="StaticOutputField" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">9pt</item>
        <item name="android:layout_width">290dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>
    <style name="BasicEntryField" parent="android:Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">9pt</item>
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="BasicEntryFieldCaps" parent="android:Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">9pt</item>
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
</resources>
